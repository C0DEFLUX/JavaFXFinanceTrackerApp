<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxfinancetrackerapp.RegisterController">
   <children>
      <AnchorPane prefHeight="400.0" prefWidth="300.0" style="-fx-background-color: #5878e1;">
         <children>
            <Label layoutX="36.0" layoutY="155.0" text="Finanace Tracker App" textFill="#f9fafc">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
            <Label layoutX="66.0" layoutY="222.0" text="Made by Niks Kļaviņš" textFill="#f9fafc">
               <font>
                  <Font size="19.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <VBox alignment="CENTER" layoutX="300.0" prefHeight="400.0" prefWidth="300.0">
         <children>
            <TextField fx:id="usernameRegField" promptText="Username">
               <padding>
                  <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="passwordRegField" promptText="Password">
               <padding>
                  <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
               </padding>
            </PasswordField>
            <Label />
            <Button mnemonicParsing="false" onAction="#register" style="-fx-background-color: #5878e1;" text="REGISTER" textFill="#f9fafc">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
               </padding>
            </Button>
            <Button mnemonicParsing="false" onAction="#showLoginView" style="-fx-background-color: gray;" text="Already have an account?" textFill="WHITE">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
