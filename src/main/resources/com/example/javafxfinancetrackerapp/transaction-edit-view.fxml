<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxfinancetrackerapp.EditTransactionsController">
    <children>
        <VBox prefHeight="400.0" prefWidth="300.0" spacing="10">
            <Label style="-fx-font-size: 18px;" text="Edit a Transaction" />
            <ComboBox fx:id="typeBox" promptText="Select Type" />
            <TextField fx:id="editDescField" promptText="Description">
                <padding>
                    <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                </padding></TextField>
            <TextField fx:id="editAmountField" promptText="Amount">
                <padding>
                    <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                </padding></TextField>
            <Button fx:id="saveEditButton"  style="-fx-background-color: #5878e1;" text="Save" textFill="#f9fafc">
                <padding>
                    <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
                </padding></Button>
            <Button onAction="#handleBack" style="-fx-background-color: #5878e1;" text="Back to Dashboard" textFill="#f9fafc">
                <VBox.margin>
                    <Insets top="157.0" />
                </VBox.margin>
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <padding>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                </padding></Button>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
