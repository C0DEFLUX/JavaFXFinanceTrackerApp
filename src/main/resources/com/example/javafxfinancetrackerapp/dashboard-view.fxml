<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxfinancetrackerapp.DashboardController">
    <children>
        <AnchorPane prefHeight="400.0" prefWidth="300.0">
            <Label layoutX="14.0" layoutY="14.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Personal Finance Dashboard" />
             <Button layoutX="14.0" layoutY="80.0" onAction="#handleAddTransaction" style="-fx-background-color: #5878e1;" text="Add Transaction" textFill="#f9fafc">
            <padding>
               <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding></Button>
             <Button layoutX="14.0" layoutY="121.0" onAction="#handleViewTransactions" style="-fx-background-color: #5878e1;" text="View Transactions" textFill="#f9fafc">
            <padding>
               <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding></Button>
         <Label layoutX="14.0" layoutY="48.0" style="-fx-font-size: 18;" text="Actions">
            <font>
               <Font size="10.0" />
            </font>
         </Label>
             <Button layoutX="14.0" layoutY="359.0" onAction="#handleLogout" style="-fx-background-color: #5878e1;" text="Logout" textFill="#f9fafc">
            <padding>
               <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding></Button>
         <Label layoutX="14.0" layoutY="160.0" style="-fx-font-size: 18;" text="Summary">
            <font>
               <Font size="10.0" />
            </font>
         </Label>
             <Label fx:id="incomeLabel" layoutX="15.0" layoutY="199.0" text="Income: $0.00" />
             <Label fx:id="expenseLabel" layoutX="15.0" layoutY="228.0" text="Expenses: $0.00" />
         <Label fx:id="totalLabel" layoutX="15.0" layoutY="255.0" text="Total Expenses: $0.00" />
        </AnchorPane>
    </children>
</AnchorPane>
